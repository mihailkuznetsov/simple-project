<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="msg" type="com.codenvy.client.SimpleProjectMessages"/>

    <ui:style>
        @external .gwt-DialogBox .Caption;
        .gwt-DialogBox .Caption {
            font-weight: bold;
            text-align: center;
        }

        .buttonPanel {
            margin-right: 8px;
            text-align: right;
        }

        .button {
            margin: 5px 2px;
            width: 60px;
            height: 25px;
            display: inline;
        }

        .dialogBox {
            width: 250px;
            height: 150px;
        }

        .textArea {
            width: 93%;
            height: 70px;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.dialogBox}">
        <g:Label text="{msg.currentUser}"/>
        <g:Label ui:field="userInfo"/>
        <g:TextArea ui:field="statusText" addStyleNames="{style.textArea}"/>
        <g:FlowPanel addStyleNames="{style.buttonPanel}">
            <g:Button text="{msg.ok}" ui:field="okButton" addStyleNames="{style.button}"/>
            <g:Button text="{msg.cancel}" ui:field="cancelButton" addStyleNames="{style.button}"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
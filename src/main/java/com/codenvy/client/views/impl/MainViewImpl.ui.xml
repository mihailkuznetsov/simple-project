<!DOCTYPE ui:UiBinder SYSTEM
        "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .buttonPanel {
            margin: 40px;
        }
        .table {
            margin: 40px 500px;
        }
        .button {
            height: 30px;
            margin: 5px;
        }

    </ui:style>

    <g:DockLayoutPanel unit="EM" width="100%" height="100%">

        <g:east size="20">
            <g:FlowPanel width="150px" addStyleNames="{style.buttonPanel} ">
                <g:Button width="120px" ui:field="addButton" text="Add" addStyleNames="{style.button}"/>
                <g:Button width="120px" ui:field="editButton" text="Edit" addStyleNames="{style.button}"/>
                <g:Button width="120px" ui:field="deleteButton" text="Delete" addStyleNames="{style.button}"/>
            </g:FlowPanel>
        </g:east>

        <g:center>
            <c:CellTable ui:field="table" addStyleNames="{style.table}" />
        </g:center>

    </g:DockLayoutPanel>

</ui:UiBinder>
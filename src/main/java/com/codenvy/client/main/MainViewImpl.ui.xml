<!DOCTYPE ui:UiBinder SYSTEM
        "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:with field="res" type="com.codenvy.client.ResourceBundle"/>
    <ui:with field="msg" type="com.codenvy.client.SimpleProjectMessages"/>

    <g:DockLayoutPanel unit="PCT" width="100%" height="100%">

        <g:west size="30">
            <g:FlowPanel>
                <g:Label ui:field="userAmountLabel" addStyleNames="{res.css.userAmountLabel}"/>
                <g:Image resource="{res.image}" addStyleNames="{res.css.image}"/>
            </g:FlowPanel>
        </g:west>

        <g:east size="20">
            <g:FlowPanel addStyleNames="{res.css.buttonPanel} ">
                <g:Button ui:field="addButton" text="{msg.add}" addStyleNames="{res.css.button}"/>
                <g:Button ui:field="editButton" text="{msg.edit}" addStyleNames="{res.css.button}"/>
                <g:Button ui:field="deleteButton" text="{msg.delete}" addStyleNames="{res.css.button}"/>
            </g:FlowPanel>
        </g:east>

        <g:center>
            <c:CellTable ui:field="table" addStyleNames="{res.css.table}" />
        </g:center>

        <g:south size="20">
            <g:FlowPanel>
                <g:Button ui:field="englishButton" text="English" addStyleNames="{res.css.button}"/>
                <g:Button ui:field="russianButton" text="Русский" addStyleNames="{res.css.button}"/>
                <g:Label ui:field="info" text="{res.info_en.getText}"/>
            </g:FlowPanel>
        </g:south>

    </g:DockLayoutPanel>

</ui:UiBinder>